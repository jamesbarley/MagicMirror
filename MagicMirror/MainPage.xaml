<Page
    x:Class="MagicMirror.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MagicMirror"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" FontSize="36" Width="720" Height="1280" >

    <Grid Background="Black">
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
            </Style>
        </Grid.Resources>
        <TextBlock x:Name="tbkTitle" Margin="0" TextWrapping="Wrap" Text="Mirror Mirror on the Canary Wall . . ." VerticalAlignment="Top" TextAlignment="Center"  />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnClickMe" Content="Click Me!"  FontSize="36" Click="btnClickMe_Click" HorizontalAlignment="Center" Foreground="White" Background="Gray" />
            <TextBlock x:Name="tbkHello" Margin="0" Text="Why hello there!"  TextAlignment="Center" FontSize="36" />
        </StackPanel>
    </Grid>
</Page>
